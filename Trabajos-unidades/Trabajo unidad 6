# 1) Función que imprime "Hola Mundo!"
def imprimir_hola_mundo():
    print("Hola Mundo!")

imprimir_hola_mundo()
print("----------")

# 2) Función que saluda al usuario
def saludar_usuario(nombre):
    return f"Hola {nombre}!"

nombre_usuario = input("2) Ingresa tu nombre: ")
print(saludar_usuario(nombre_usuario))
print("----------")

# 3) Función que muestra información personal
def informacion_personal(nombre, apellido, edad, residencia):
    print(f"Soy {nombre} {apellido}, tengo {edad} años y vivo en {residencia}")

nombre = input("3) Ingresa tu nombre: ")
apellido = input("Ingresa tu apellido: ")
edad = input("Ingresa tu edad: ")
residencia = input("Ingresa tu lugar de residencia: ")
informacion_personal(nombre, apellido, edad, residencia)
print("----------")

# 4) Funciones para calcular área y perímetro del círculo
import math

def calcular_area_circulo(radio):
    return math.pi * radio ** 2

def calcular_perimetro_circulo(radio):
    return 2 * math.pi * radio

radio = float(input("4) Ingresa el radio del círculo: "))
print("Área del círculo:", calcular_area_circulo(radio))
print("Perímetro del círculo:", calcular_perimetro_circulo(radio))
print("----------")

# 5) Función que convierte segundos a horas
def segundos_a_horas(segundos):
    return segundos / 3600

segundos = int(input("5) Ingresa la cantidad de segundos: "))
print("Equivalente en horas:", segundos_a_horas(segundos))
print("----------")

# 6) Función que imprime la tabla de multiplicar
def tabla_multiplicar(numero):
    print(f"Tabla de multiplicar del {numero}:")
    for i in range(1, 11):
        print(f"{numero} x {i} = {numero * i}")

num = int(input("6) Ingresa un número para la tabla de multiplicar: "))
tabla_multiplicar(num)
print("----------")

# 7) Función que realiza operaciones básicas y devuelve una tupla
def operaciones_basicas(a, b):
    return (a + b, a - b, a * b, a / b if b != 0 else "Indefinido")

a = float(input("7) Ingresa el primer número: "))
b = float(input("Ingresa el segundo número: "))
suma, resta, multiplicacion, division = operaciones_basicas(a, b)
print(f"Suma: {suma}, Resta: {resta}, Multiplicación: {multiplicacion}, División: {division}")
print("----------")

# 8) Función que calcula el IMC
def calcular_imc(peso, altura):
    return peso / (altura ** 2)

peso = float(input("8) Ingresa tu peso en kg: "))
altura = float(input("Ingresa tu altura en metros: "))
print("Tu IMC es:", round(calcular_imc(peso, altura), 2))
print("----------")

# 9) Función que convierte Celsius a Fahrenheit
def celsius_a_fahrenheit(celsius):
    return celsius * 9/5 + 32

celsius = float(input("9) Ingresa la temperatura en Celsius: "))
print("Equivalente en Fahrenheit:", celsius_a_fahrenheit(celsius))
print("----------")

# 10) Función que calcula el promedio de tres números
def calcular_promedio(a, b, c):
    return (a + b + c) / 3

num1 = float(input("10) Ingresa el primer número: "))
num2 = float(input("Ingresa el segundo número: "))
num3 = float(input("Ingresa el tercer número: "))
print("El promedio es:", calcular_promedio(num1, num2, num3))
